@@ -0,0 +1,68 @@
+# Copyright 2024 AKW Technology Inc
+# BrowserOS Chrome importer - all Chrome import code in one place
+
+import("//build/config/features.gni")
+
+source_set("browseros") {
+  sources = [
+    # Main importer (thin orchestrator)
+    "chrome_importer.cc",
+    "chrome_importer.h",
+
+    # Shared utilities
+    "chrome_importer_utils.cc",
+    "chrome_importer_utils.h",
+
+    # Decrypt utilities
+    "chrome_decryptor.cc",
+    "chrome_decryptor.h",
+
+    # History import
+    "chrome_history_importer.cc",
+    "chrome_history_importer.h",
+
+    # Bookmark import
+    "chrome_bookmarks_importer.cc",
+    "chrome_bookmarks_importer.h",
+
+    # Password import
+    "chrome_password_importer.cc",
+    "chrome_password_importer.h",
+
+    # Cookie import
+    "chrome_cookie_importer.cc",
+    "chrome_cookie_importer.h",
+
+    # Autofill import
+    "chrome_autofill_importer.cc",
+    "chrome_autofill_importer.h",
+
+    # Extensions import
+    "chrome_extensions_importer.cc",
+    "chrome_extensions_importer.h",
+  ]
+
+  if (is_mac) {
+    sources += [ "chrome_decryptor_mac.mm" ]
+    frameworks = [ "Security.framework" ]
+  }
+
+  if (is_win) {
+    sources += [ "chrome_decryptor_win.cc" ]
+    libs = [ "crypt32.lib" ]
+  }
+
+  deps = [
+    "//base",
+    "//chrome/common/importer",
+    "//chrome/app:generated_resources",
+    "//components/favicon_base",
+    "//components/user_data_importer/common",
+    "//components/user_data_importer/content",
+    "//crypto",
+    "//net",
+    "//sql",
+    "//ui/base",
+    "//url",
+  ]
+}
